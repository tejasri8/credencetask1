    <script src="https://www.gstatic.com/firebasejs/3.6.1/firebase.js"></script>
    <script type="text/JavaScript" href='E:\detailsweb\index.js'></script>


    <title>login page</title>
    <style>
        .btn btn-primary {
            height: 20px;
        }
        body {
            background-color:rgb(59, 57, 57);
            align-content: center;
            float: center;
            text-align: center;
            width: 100%;
            background-image: url("https://img.icons8.com/officel/16/000000/hourglass.png")no-repeat;
        }
        .form {
            background-color:rgb(59, 57, 57);
            height: 400px;
            width: 400px;
            box-shadow:1px 4px 20px 11px rgb(30, 30, 37);
            position: relative;
            margin-top: 10vh;
            padding-left: 50px;
            padding-right: 50px;
            padding-top: 15px;
            display: inline-block;
        }
        .form2 {
            display: inline-block;
            position: relative;
            top: 40px;
        }
        h3 {
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            color: #fff;
            font-weight: bold;
            text-align: center;
            position: relative;
            padding-top: 10px;
        }
        .form-control {
            position: relative;
            box-sizing:inherit;
        }
    </style>
</head>

<body>
    <br>

    



    <form method="POST" action="/login">
        <div class="form">
            <h3>Admin Login</h3>
            <div class="user" style="color: white;text-align: left;margin-bottom:10px ;margin-top: 20px;">
                <label>Username</label>
                <input class="form-control" name="username" id="username" type="name">
                
            </div>
            <div class="pw" style="color:white; text-align: left;margin-bottom: 10px;margin-top: 20px;">
                <label>Password</label>
                <input class="form-control" name="password" id="password" type="password">
                <!-- An element to toggle between password visibility -->
                <div class="sp" style="color:white;">
                <input type="checkbox" onclick="myFunction1()" style="align-content:left;">Show Password
                </div>  
                <script>
                    function myFunction1() {
                        var x = document.getElementById("password");
                        if (x.type === "password") {
                            x.type = "text";
                        } else {
                            x.type = "password";
                        }
                    }
                </script>
            </div>
            <%if(data.view){%>
            <small><%=data.msg%></small>
            <% }%>
            <br>
            <div>
                <button class="btn btn-primary btn-block" id="loginbtn">login</button>
                <a href="/signup?" >create account</a>

            </div>
        </div>
        <br>
        

    </form>
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>